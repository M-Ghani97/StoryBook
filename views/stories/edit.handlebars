<h1>Edit Stories</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input placeholder="Title" name="title" type="text" value="{{story.title}}">
                <label for="first_name">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <select name="status">
                    <option value="public" {{compare story.status 'public'}}> Public
                    </option>
                    <option value="private" {{compare story.status 'private'}}>Private</option>
                    <option value="unpublished" {{compare story.status 'unpublished'}}>Unpublished</option>
                </select>
                <label>Status</label>
            </div>
        </div>
        <p>
            <label>
                <input type="checkbox" name="allowComments" {{#if story.allowComments}} checked {{/if}} />
                <span>Allow Comments</span>
            </label>
        </p>
        <div class="row">

        </div>
        <div class="row">
            <div class="input-field col s12">
                <h5>Tell Us Your Story:</h5>
                <textarea name="body" class="materialize-textarea">{{{story.body}}}</textarea>
            </div>
        </div>
        <input type="submit" value="Save" class="btn">
    </form>
</div>